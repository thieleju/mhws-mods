{
  "branches": ["main"],
  "tagFormat": "better-hunter-highlights-v${version}",
  "extends": "semantic-release-monorepo",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "MOD_NAME=better-hunter-highlights VERSION=${nextRelease.version} node ../../build.js && node ../../update-readme.js"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "mods/better-hunter-highlights/CHANGELOG.md",
          "mods/better-hunter-highlights/package.json",
          "mods/better-hunter-highlights/modinfo.ini",
          "README.md"
        ],
        "message": "chore(better-hunter-highlights): release v${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.zip",
            "label": "better-hunter-highlights-v${nextRelease.version}.zip"
          }
        ]
      }
    ]
  ]
}
