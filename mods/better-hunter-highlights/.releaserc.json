{
  "branches": [
    "main"
  ],
  "tagFormat": "${version}",
  "repositoryUrl": "https://github.com/thieleju/mhws-mods.git",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "path": "mods/better-hunter-highlights"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "path": "mods/better-hunter-highlights"
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "modinfo.ini"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    "@semantic-release/github"
  ]
}