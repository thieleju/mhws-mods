{
  "branches": ["main"],
  "tagFormat": "skill-uptime-tracker-v${version}",
  "extends": "semantic-release-monorepo",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "MOD_NAME=skill-uptime-tracker VERSION=${nextRelease.version} node ../../build.js && node ../../update-readme.js"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "mods/skill-uptime-tracker/CHANGELOG.md",
          "mods/skill-uptime-tracker/package.json",
          "mods/skill-uptime-tracker/modinfo.ini",
          "README.md"
        ],
        "message": "chore(skill-uptime-tracker): release v${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.zip",
            "label": "skill-uptime-tracker-v${nextRelease.version}.zip"
          }
        ]
      }
    ]
  ]
}
